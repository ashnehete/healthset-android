<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="in.ashnehete.healthset.fragments.DevicesFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_device_ecg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="ECG"
            android:textColor="@color/ap_charcoal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_device_temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Temperature"
            android:textColor="@color/ap_charcoal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_device_pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Pulse"
            android:textColor="@color/ap_charcoal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_device_bend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="Body Posture"
            android:textColor="@color/ap_charcoal"
            android:textSize="24sp" />

        <Button
            android:id="@+id/btn_device_gsr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_style"
            android:text="GSR"
            android:textColor="@color/ap_charcoal"
            android:textSize="24sp" />
    </LinearLayout>
</FrameLayout>
